// 这个styl文件是函数式的,只能通过@import来引用

// 设置底部1px
border-bottom-1px($color) {
  position: relative;
  &:after{
    display: block;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    border-top: 1px solid $color;
    content: '';
  }
}

// 背景图根据dpi来选择@2x或者@3x的图片
bg-image($url) {
  background-image: url($url + "@2x.png");
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3){
   background-image: url($url + "@3x.png");
  }
}

border-bottom-none() {
  &:after{
    display: none;
  }
}
  
  
