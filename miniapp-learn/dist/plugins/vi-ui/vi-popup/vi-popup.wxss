.vi-popup {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 1000;
}
.vi-popup .vi-popup-mask {
  position: absolute;
  width: 100%;
  height: 100%;
}
.vi-popup .vi-popup-mask-gray {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}
.vi-popup .vi-popup-content-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.vi-popup-fade-enter from {
  opacity: 0;
  transform: scale(0.3, 0.3);
}
.vi-popup-fade-enter to {
  opacity: 1;
  transform: scale(1, 1);
}
